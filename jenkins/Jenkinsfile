pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/nfroze/Project-13-CI-CD-Pipeline-Comparison.git'
            }
        }
        
        stage('Build') {
            steps {
                sh 'cd sample-apps/python-app && pip install -r requirements.txt --break-system-packages'
            }
        }
        
        stage('Test') {
            steps {
                sh 'cd sample-apps/python-app && python3 -m flask --version'
            }
        }
        
        stage('Deploy to Dev') {
            steps {
                sh '''
                cd sample-apps/python-app
                echo "Deploying to Dev: 52.56.150.40"
                # In real deployment, would SCP files and restart service
                '''
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                sh '''
                echo "Deploying to Staging: 18.171.171.215"
                # Would require approval in real pipeline
                '''
            }
        }
        
        stage('Deploy to Prod') {
            steps {
                sh '''
                echo "Deploying to Production: 35.179.166.167"
                # Would require manual approval
                '''
            }
        }
    }
}